// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Category {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  slug          String        @unique
  path          String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  subcategories SubCategory[]
  products      Product[]
}

model SubCategory {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  slug       String     @unique
  path       String
  categoryId String     @db.ObjectId
  category   Category   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  products   Product[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([categoryId])
}

model Product {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String       @unique
  brand       String
  price       Float
  shippingCost Float?      // Product-specific shipping cost (optional)
  categoryId  String       @db.ObjectId
  category    Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  subcategoryId String?    @db.ObjectId
  subcategory SubCategory? @relation(fields: [subcategoryId], references: [id], onDelete: SetNull)
  images      String[]     @default([])
  videoUrls   String[]     @default([])  // YouTube video URLs (up to 4)
  badge       String?      // 'new' | 'sale' | 'rare' | 'coming-soon' | 'out-of-stock' | 'premium' | 'top-tier'
  inStock     Boolean      @default(true)
  stock       Int?         @default(0)
  stockStatus String?      @default("in-stock") // 'in-stock' | 'sold-out' | 'pre-order'
  productType String       @default("new")      // 'new' | 'used'
  condition   String?                           // 'mint' | 'excellent' | 'very-good' | 'good' | 'fair' (for used products)
  conditionNotes String?                        // Additional notes for used items
  description String
  specs       Json?        // Record<string, string>
  included    String[]     @default([])
  warranty    String?
  sku         String       @unique
  rating      Float?       @default(0)
  reviewCount Int?         @default(0)
  reviews     Review[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([categoryId])
  @@index([subcategoryId])
  @@index([brand])
  @@index([productType])
}

model BlogPost {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  slug       String   @unique
  excerpt    String
  content    String
  date       DateTime
  author     String
  categories String[] @default([])
  image      String?
  readTime   Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([date])
}

model PromoBanner {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String
  ctaText     String
  ctaLink     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FeaturedCollection {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  slug            String   @unique
  productIds      String[] @default([])
  backgroundImage String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?   // Hashed, null for OAuth-only users
  role          String    @default("user") // 'user' | 'admin'
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  wishlist      Wishlist[]
  addresses     Address[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Address {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName String
  lastName  String
  address1  String
  address2  String?
  city      String
  state     String
  zip       String
  country   String
  phone     String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String   // email
  token      String   @unique
  type       String   @default("email-verification") // 'email-verification' | 'password-reset' | 'otp-verification'
  otp        String?  // 6-digit OTP code
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, token])
}

model Order {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber String?     // Custom order number: day+month+year(2)+hour+minute+21 (Vietnam timezone)
  userId      String?     @db.ObjectId
  user        User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  status      String      @default("pending") // 'pending' | 'processing' | 'shipped' | 'delivered' | 'cancelled'
  total       Float
  items       OrderItem[]
  shippingAddress Json?
  billingAddress  Json?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
  @@index([status])
}

model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String  @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String  @db.ObjectId
  quantity  Int
  price     Float
  createdAt DateTime @default(now())

  @@index([orderId])
}

model Review {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  productId   String?  @db.ObjectId
  product     Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  customProductName String? // For reviews from external channels (Reverb, eBay, etc.)
  buyerName   String
  rating      Int      // 1-5 stars
  message     String
  date        DateTime
  sourceUrl   String?  // Reverb listing URL
  sourceApi   String?  // Reverb feedback API URL
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([date])
}

model Banner {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  subtitle   String?
  image      String
  link       String?
  buttonText String?
  order      Int      @default(0)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model FAQ {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  question  String
  answer    String
  category  String   @default("General")
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Testimonial {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  authorName  String
  message     String
  rating      Int      @default(5)
  productName String?
  date        DateTime @default(now())
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSettings {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  companyName   String   @default("James Sax Corner")
  address       String   @default("Ha Noi, Viet Nam")
  phone         String   @default("")
  email         String   @default("")
  workingHours  String   @default("24/7")
  socialLinks   Json     @default("{}")
  quickFaq      Json?    // Quick FAQ for product pages
  footerText    String   @default("")
  copyrightText String   @default("")
  domesticShippingCost Float @default(25) // Vietnam domestic shipping cost
  updatedAt     DateTime @updatedAt
}

model HomepageContent {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  sectionKey String   @unique
  title      String?
  subtitle   String?
  content    String?
  image      String?
  isVisible  Boolean  @default(true)
  order      Int      @default(0)
  metadata   Json?
  updatedAt  DateTime @updatedAt
}

model InquiryTitle {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Wishlist {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
}


model ShippingZone {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String   // e.g., "USA", "Europe", "Asia Pacific"
  countries    String[] @default([]) // Country codes: ["US", "CA"], or ["ALL"] for default
  shippingCost Float    // Shipping cost for this zone
  isDefault    Boolean  @default(false) // Default zone for countries not in any zone
  order        Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Brand {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  slug      String   @unique
  logo      String?  // Brand logo URL
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Inquiry {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  inquiryType String   // From InquiryTitle
  message     String
  productName String?  // Optional - if inquiry is about a specific product
  productSku  String?  // Optional - product SKU
  status      String   @default("new") // 'new' | 'read' | 'replied' | 'closed'
  notes       String?  // Admin notes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([email])
  @@index([createdAt])
}


model SpecKey {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique // e.g., "Material", "Finish", "Key"
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model DescriptionTemplate {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   // Template name for easy selection
  content   String   // The actual template content
  type      String   // 'header' | 'footer'
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
}


model Announcement {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String   // e.g., "Professional Setup"
  description String   // e.g., "Every instrument professionally set up before shipping"
  ctaText     String?  // Optional button text
  ctaLink     String?  // Optional button link
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Subscriber {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}


model Accessory {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique // e.g., "Case", "Mouthpiece", "Cleaning Kit"
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
